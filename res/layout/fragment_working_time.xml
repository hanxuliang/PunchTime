<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
     <TimePicker
        android:id="@+id/workingPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="false"
        android:layout_centerInParent="true"
        android:layout_centerVertical="false"
        android:layout_marginLeft="82dp"
        android:layout_marginTop="168dp" />

     <Button
         android:id="@+id/select_working_time"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_alignParentRight="true"
         android:layout_marginBottom="14dp"
         android:layout_marginRight="19dp"
         android:text="@string/next" />

     <CheckBox
         android:id="@+id/checkBox_free"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="68dp"
         android:text="@string/select_free" />

     <TextView
         android:id="@+id/textView_select_time"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/workingPicker"
         android:layout_alignParentLeft="true"
         android:layout_marginBottom="60dp"
         android:layout_marginLeft="50dp"
         android:text="@string/select_working_time"/>

</RelativeLayout>
